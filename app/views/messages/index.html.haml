
%h2 Messages

%br
%form{id: 'q_search', class: 'form-inline'}
  .form-group
    = search_form_for @q, url: user_messages_path(current_user), method: :post do |f|
      = f.search_field :content_cont, class: 'form-control', placeholder: "Search for messages by content", autofocus: true
      = f.submit class: "btn btn-warning"
%br
.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th.col-md-2 From
        %th.col-md-2 To
        %th.col-md-2 Date
        %th.col-md-4 Message
        %th.col-md-2 Action
    %tbody
      = render @messages



